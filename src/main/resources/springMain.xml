<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="quoters.TerminatorQuoter" id="terminatorQuoter">
        <property name="message" value="I'll be back"/>
    </bean>

    <bean class="quoters.InjectRandomIntAnnotationBeanPostProcessor"/>
    <bean class="quoters.ProfilingHandlerBeanPostProcessor"/>
    <bean class="quoters.PostProxyInvokerContextListener"/>

    <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>
    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/> <!--инициализация @PostConstruct-->
    <!--    или <context:annotation-config/> - добавляет все стандартыне BeanPostProcessor  -->
    <!--    или <context:component-scan/> - помимо сканирования выполнит еще и namespace выше   -->
</beans>